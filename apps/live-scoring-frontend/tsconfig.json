{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@app/*": ["src/app/*"],
            "@constants/*": ["src/constants/*"],
            "@contexts/*": ["src/contexts/*"],
            "@enums/*": ["src/enums/*"],
            "@helpers/*": ["src/helpers/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@services/*": ["src/services/*"],
            "@stores/*": ["src/stores/*"],
            "@types": ["src/types.d"]
        }
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
